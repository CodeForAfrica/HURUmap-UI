{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "declaration": true,
      "rootDirs": ["src", "stories"] 
    },
    "include": ["src/"],
    "exclude": ["node_modules", "build", "docs"]
  }