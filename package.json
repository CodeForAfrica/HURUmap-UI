    "webpack": "^4.39.1"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "yarn lint && yarn build",
    "lint": "yarn eslint --fix --ignore-path './.gitignore' --ext '.js,.ts,.tsx,.json,.md' './'",
    "lint-staged": "yarn eslint --fix",
    "start": "start-storybook",
    "build": "yarn build:lib",
    "build:lib": "tsc && yarn copy-svg-to-lib && yarn copy-png-to-lib",
    "copy-svg-to-lib": "cpx \"./src/**/*.svg\" ./dist",
    "copy-png-to-lib": "cpx \"./src/**/*.png\" ./dist",
    "deploy:storybook": "storybook-to-ghpages"
  },
  "dependencies": {
    "@material-ui/core": "^4.3.2",
    "@material-ui/styles": "^4.3.0",
    "@material-ui/types": "^4.1.1",
    "@types/react-sizes": "^2.0.0",
    "dequal": "^1.0.0",
    "geojson": "^0.5.0",
    "leaflet": "^1.5.1",
    "lodash": "^4.17.14",
    "victory": "^32.3.1"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.3.2",
    "@material-ui/styles": "^4.3.0",
    "@material-ui/types": "^4.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json,md}": [
      "yarn lint-staged",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10.16.0 <=12.x"
  }
