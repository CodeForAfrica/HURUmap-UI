    "@types/leaflet": "^1.4.4",
    "@types/lodash": "^4.14.136",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/storybook__addon-knobs": "^5.0.1",
    "@types/storybook__react": "^4.0.2",
    "@types/victory": "^31.0.20",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-loader": "^8.0.5",
